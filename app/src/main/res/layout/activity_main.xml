<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="408dp"
        android:layout_height="112dp"
        android:layout_marginTop="16dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp">

        <Button
            android:id="@+id/increaseBrushSize"
            android:layout_width="99dp"
            android:layout_height="55dp"
            android:text="+"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="49dp" />

        <Button
            android:id="@+id/decreaseBrushSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="52dp" />

        <Button
            android:id="@+id/ColorBtn"
            android:layout_width="83dp"
            android:layout_height="56dp"
            android:layout_marginTop="50dp"
            android:text="Color"
            app:layout_constraintEnd_toStartOf="@+id/opacityBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/opacityBtn"
            android:layout_width="101dp"
            android:layout_height="55dp"
            android:layout_marginTop="49dp"
            android:text="Opacity"
            app:layout_constraintEnd_toStartOf="@+id/brushSizeBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ColorBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/clearCanvasBtn"
            android:layout_width="98dp"
            android:layout_height="54dp"
            android:layout_marginTop="48dp"
            android:text="Clear Canvas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/increaseBrushSize"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.Toolbar>

    <com.example.doodler.DoodleView
        android:id="@+id/doodleView"
        android:layout_width="412dp"
        android:layout_height="617dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        tools:layout_editor_absoluteX="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>